<marionetteConfig>
  <microserviceName>ui-service</microserviceName>
  <srcRoot>src/main/java</srcRoot>
  <injectCodeRoot>com/outfit/ui/__marionette</injectCodeRoot>

  <marionetteClasses>

    <marionetteClass>
      <originalClass>
        <path>com/outfit/ui/controllers/UIConfig.java</path>
        <behaviours>
          <behaviour>
            <name>decideUI</name>
            <id>default</id>
          </behaviour>
        </behaviours>
      </originalClass>

      <variantClasses>

        <variantClass>
          <path>com/outfit/ui/controllers/marionette/UIConfig_Marionette_UIBeautiful.java</path>
          <behaviours>
            <behaviour>
              <name>decideUI</name>
              <id>beautiful</id>
            </behaviour>
          </behaviours>
        </variantClass>

      </variantClasses>
    </marionetteClass>


    <marionetteClass>
      <originalClass>
        <path>com/outfit/ui/controllers/ImageCache.java</path>
        <behaviours>
          <behaviour>
            <name>getImage</name>
            <id>default</id>
          </behaviour>

          <behaviour>
            <name>putImage</name>
            <id>default</id>
          </behaviour>
        </behaviours>
      </originalClass>

      <variantClasses>

        <variantClass>
          <path>com/outfit/ui/controllers/marionette/FakeImageCache_Marionette_AlwaysFetch.java</path>
          <behaviours>
            <behaviour>
              <name>getImage</name>
              <id>fake</id>
            </behaviour>

            <behaviour>
              <name>putImage</name>
              <id>fake</id>
            </behaviour>
          </behaviours>
        </variantClass>

      </variantClasses>
    </marionetteClass>

  </marionetteClasses>
</marionetteConfig>